@model LoginViewModel

@{
	ViewData["Title"] = "OFMC Login";
}


<div class="container mt-5">
	<div class="d-flex justify-content-between align-items-center">
		<!-- Left Column for Registration prompt -->
		<div class="d-flex flex-column align-items-center  text-center" style="width: 25%;">
			<div>
				<h5 class="fw-normal mb-3">Don't have an account?<br />Create One</h5>

				<form asp-controller="Account" asp-action="Register" method="get">
					<button type="submit" class="btn btn-success px-4 py-2 rounded fs-5">Register</button>
				</form>
			</div>
		</div>

		<!-- Middle Column for Image -->
		<div class="text-center" style="width: 25%; margin-left: -80px;">
			<img src="~/Images/Doctor.jpg" alt="Doctor" class="img-fluid" style="max-height: 400px;" />
		</div>

		<!-- Right Column for Login form -->
		<div style="width: 45%;">
			<h4 class="fw-bold text-center mb-4">Log In To Patient Hub</h4>

			<form asp-controller="Account" asp-action="PatientLogin" method="post">
				<div asp-validation-summary="All"></div>

				<div class="mb-3">
					<label asp-for="Email" class="form-label"></label>
					<input asp-for="Email" class="form-control thick-border" />
					<span asp-validation-for="Email" class="text-danger"></span>
				</div>

				<div class="mb-3">
					<label asp-for="Password" class="form-label"></label>
					<input asp-for="Password" class="form-control thick-border" />
					<span asp-validation-for="Password" class="text-danger"></span>
				</div>

				<div class="form-check mb-4 d-flex align-items-center justify-content-center gap-2">
					<input asp-for="RememberMe" class="form-check-input" type="checkbox" />
					<label asp-for="RememberMe" class="form-check-label text-muted"></label>
				</div>

				<div class="text-center">
					<button type="submit" class="btn btn-success px-5 py-2 rounded fs-5">Log In</button>
				</div>
			</form>
		</div>
	</div>
</div>