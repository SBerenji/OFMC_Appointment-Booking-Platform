@model LoginViewModel

@{
	ViewData["Title"] = "OFMC Login";
}


<div class="container mt-5">
	<div class="d-flex justify-content-between align-items-center">
		<!-- Middle Column for Image -->
		<div class="text-center" style="width: 45%; margin-left: -80px;">
			<img src="~/Images/admin_setup.jpg" alt="Doctor" class="img-fluid" style="max-height: 400px;" />
		</div>

		<!-- Right Column for Login form -->
		<div style="width: 45%;">
			<h4 class="fw-bold text-center mb-4">Log In To Admin Hub</h4>

			<form asp-controller="Account" asp-action="AdminLogin" method="post">
				<div asp-validation-summary="All"></div>

				<div class="mb-3">
					<label asp-for="Email" class="form-label"></label>
					<input asp-for="Email" class="form-control thick-border" id="AdminEmail" />
					<span asp-validation-for="Email" class="text-danger"></span>
				</div>

				<div class="mb-3">
					<label asp-for="Password" class="form-label"></label>
					<input asp-for="Password" class="form-control thick-border" id="AdminPassword" />
					<span asp-validation-for="Password" class="text-danger"></span>
				</div>

				<div class="form-check mb-4 d-flex align-items-center justify-content-center gap-2">
					<input asp-for="RememberMe" class="form-check-input" type="checkbox" />
					<label asp-for="RememberMe" class="form-check-label text-muted"></label>
				</div>

				<div class="text-center">
					<button type="submit" class="btn btn-success px-5 py-2 rounded fs-5" id="AdminLogIn">Log In</button>
				</div>
			</form>
		</div>
	</div>
</div>